@model Nguyễn_Hùng_Cường_2011060110.ViewModels.CourseViewModel
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
    
}

<h2>Tạo Form</h2>

<form>
    <div class="form-group">
        @Html.LabelFor(m => m.DiaChi)
        @Html.TextBoxFor(m => m.DiaChi, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Ngay)
        @Html.TextBoxFor(m => m.Ngay, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Gio)
        @Html.TextBoxFor(m => m.Gio, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Categories)
        @Html.DropDownListFor(m => m.Categories, new SelectList (Model.Categories,"ID","Name"),"", new { @class = "form-control" })
    </div>
    <button style="color:red; font-size:10px;" type="submit" value="Save" class="btn btn-primary">Save</button>
    <div class="form-group"></div>
    <div class="form-group"></div>
    <div class="form-group"></div>
    <div class="form-group"></div>
</form>